# Database adapter (Neon uses the same Postgres adapter)
BACKEND_DB_ADAPTER=postgres

# Local Postgres example:
# DATABASE_URL=postgres://postgres:postgres@localhost:5432/openchat

# Neon Postgres example:
# DATABASE_URL=postgresql://<user>:<password>@<endpoint>/<database>?sslmode=require
DATABASE_URL=postgres://postgres:postgres@localhost:5432/openchat

BACKEND_AUTH_CLOCK_SKEW_SECONDS=60
# Optional default provider used by /api/v1/auth/start (falls back to first interactive provider).
# BACKEND_AUTH_DEFAULT_PROVIDER=auth0

# Minimum 32-char secret used to sign session and auth flow cookies.
BACKEND_SESSION_SECRET=replace-with-a-random-32-char-secret
BACKEND_SESSION_COOKIE_NAME=openchat_session
BACKEND_AUTH_FLOW_COOKIE_NAME=openchat_auth_flow
# Optional override. Defaults to true in production, false otherwise.
BACKEND_SESSION_SECURE_COOKIES=false

# Admin bootstrap controls (used by /admin/settings).
# If omitted, the app defaults to BACKEND_ADMIN_SETUP_PASSWORD=admin.
# BACKEND_ADMIN_SETUP_PASSWORD=replace-with-a-strong-password
# BACKEND_ADMIN_REQUIRED_EMAIL=owner@example.com

# Local admin password auth:
# If BACKEND_ADMIN_PASSWORD_HASH is unset, the default local admin credential is admin/admin.
# In production, first login with the default password requires immediate rotation.
# BACKEND_ADMIN_COOKIE_NAME=openchat_admin_session
# BACKEND_ADMIN_PASSWORD_HASH=pbkdf2_sha512$210000$<salt>$<digest>

# Optional AI provider API keys (can also be managed in /admin/settings).
# OPENROUTER_API_KEY=
# OPENAI_API_KEY=
# ANTHROPIC_API_KEY=
# GOOGLE_API_KEY=

# Public feature toggle: allow non-authenticated users to send live responses without saving chats.
NEXT_PUBLIC_ALLOW_GUEST_RESPONSES=false

# Optional UI theme override (default | galaxy | aurora | sunset | midnight).
# Defaults to the value in openchat.config.ts.
# NEXT_PUBLIC_DEFAULT_THEME=default

# Optional model provider override (openrouter | openai | gemini | anthropic).
# Defaults to the value in openchat.config.ts.
# NEXT_PUBLIC_DEFAULT_MODEL_PROVIDER=openrouter

# Example issuer with interactive OIDC login/register support.
BACKEND_AUTH_ISSUERS=[{"name":"auth0","issuer":"https://your-tenant.us.auth0.com/","audience":"https://api.openchat.local","jwksUri":"https://your-tenant.us.auth0.com/.well-known/jwks.json","tokenUse":"access","oidc":{"clientId":"your-client-id","clientSecret":"your-client-secret","redirectUri":"http://localhost:3000/api/v1/auth/auth0/callback","scopes":["openid","profile","email"],"authorizationParams":{"audience":"https://api.openchat.local"},"registerParams":{"screen_hint":"signup"}}}]
