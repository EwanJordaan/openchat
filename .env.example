# Database adapter (Neon uses the same Postgres adapter)
BACKEND_DB_ADAPTER=postgres

# Local Postgres example:
# DATABASE_URL=postgres://postgres:postgres@localhost:5432/openchat

# Neon Postgres example:
# DATABASE_URL=postgresql://<user>:<password>@<endpoint>/<database>?sslmode=require
DATABASE_URL=postgres://postgres:postgres@localhost:5432/openchat

BACKEND_AUTH_CLOCK_SKEW_SECONDS=60

# Minimum 32-char secret used to sign session and auth flow cookies.
BACKEND_SESSION_SECRET=replace-with-a-random-32-char-secret
BACKEND_SESSION_COOKIE_NAME=openchat_session
BACKEND_AUTH_FLOW_COOKIE_NAME=openchat_auth_flow
# Optional override. Defaults to true in production, false otherwise.
BACKEND_SESSION_SECURE_COOKIES=false

# Example issuer with interactive OIDC login/register support.
BACKEND_AUTH_ISSUERS=[{"name":"auth0","issuer":"https://your-tenant.us.auth0.com/","audience":"https://api.openchat.local","jwksUri":"https://your-tenant.us.auth0.com/.well-known/jwks.json","tokenUse":"access","oidc":{"clientId":"your-client-id","clientSecret":"your-client-secret","redirectUri":"http://localhost:3000/api/v1/auth/auth0/callback","scopes":["openid","profile","email"],"authorizationParams":{"audience":"https://api.openchat.local"},"registerParams":{"screen_hint":"signup"}}}]
